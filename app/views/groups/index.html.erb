<h1 class="title"><strong>My Groups</strong></h1>
<div class="groups-container">

  <% @groups.each do |group| %>
    <%= link_to group_path(group), class: "group-card-1" do %>
      <div class="group-card-image" style="background-image: url('<%= cl_image_path group.picture.key %>');"></div>

      <div class="group-card-info">
        <h5 class="group-card-title"><i class="fa-regular fa-flag"></i> <%= group.name %></h5>
        <p class="group-card-subtitle"><i class="fa-solid fa-user-group"></i> <strong><%= group.users.count %></strong> members</p>

      </div>
    <% end %>
        <p><%= link_to raw("<i class='fa-solid fa-xmark'></i>"), groups_path(@group), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-decoration-none" %></p>
  <% end %>

  <div class="group-card-1 group-form-container ">
    <%= simple_form_for @group do |f| %>
      <%= f.input :name %>
      <%= f.input :picture, as: :file %>
      <%= f.button :submit, class: "submit-btn" %>
    <% end %>
  </div>
</div>
