
  <div class="group-card">
    <%= link_to group_path(group) do
      <div class="group-card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path group.picture.key %>)">
      </div>
    <div class="group-card-info">
          <h5 class="card-title"><%= group.name</h5> %>
          <p class="card-text"><strong><%= group.users.count</strong> members</p>
        </div>
      </div>
    <% end %>
  </div>
