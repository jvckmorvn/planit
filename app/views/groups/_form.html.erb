<div class="col-sm-3">
  <div class="group-card">
    <div class="card-body d-flex justify-content-center">
      <div class="group-form-inner d-flex justify-content-center align-items-center">
        <i class="fa-solid fa-plus"></i>
      </div>
    </div>
  </div>
</div>


<%= simple_form_for @group do |f| %>
  <%= f.input :name %>
  <%= f.input :picture, as: :file %>
  <%= f.button :submit, class: "create-group-btn" %>
<% end %>
