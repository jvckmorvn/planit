<div class="container" data-controller="switch-tabs">
  <div class="row">
    <div class="col-2 border">
      <%= cl_image_tag @group.picture.key, class: "avatar-bordered m-2" %>
      <h3><%= @group.name %></h3>
      <p>All events</p>
    </div>
    <div class="col-5 d-flex justify-content-center align-items-center border" style="height: 40%;" data-action="click->switch-tabs#showCalendar">
      <p><strong>Calendar</strong></p>
    </div>
    <div class="col-5 d-flex justify-content-center align-items-center border" style="height: 40%;" data-action="click->switch-tabs#showMap">
      <p><strong>Map</strong></p>
    </div>
  </div>
  <div class="row">
    <div class="col-2 border">
      <% @events.each do |event| %>
        <%= render "events/card", event: event %>
      <% end %>
      <%= render "events/form", event: @event %>
    </div>
    <div class="col-10 d-flex justify-content-center border">
      <div data-switch-tabs-target="calendar"><%= render "events/calendar" %></div>
      <div data-switch-tabs-target="map" class="d-none" style="width: 100%;"><%= render "events/map" %></div>
    </div>
  </div>
</div>
