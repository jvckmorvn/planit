<div class="col-sm-3">
  <div class="group-card">
    <%= link_to group_path(group) do %>
      <div class="card-body" style="background-image: url('<%# cl_image_path group.picture.key %>');">
        <div class="group-card-info">
          <h5 class="card-title"><%= group.name %></h5>
          <p class="card-text"><strong><%= group.users.count %></strong> members</p>
        </div>
      </div>
    <% end %>
    <p><%= link_to raw("<i class='fa-solid fa-xmark'></i>"), group_path(group), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-decoration-none" %></p>
  </div>
</div>
