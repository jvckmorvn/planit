<div class="group-card" style="background-color: <%= group.colour.next %>;">
  <%= link_to group_path(group), class: "group-card-link" do %>
    <div class="group-card-image" style="background-image: url('<%= cl_image_path group.picture.key %>');"></div>
    <div class="group-card-info">
      <h5 class="group-card-title"><i class="fa-regular fa-flag"></i> <%= group.name %></h5>
      <p class="group-card-text"><i class="fa-solid fa-user-group"></i> <strong><%= group.users.count %></strong> <%= "member".pluralize(group.users.count) %></p>
    </div>
  <% end %>
  <%= link_to raw("<i class='fa-solid fa-xmark'></i>"), group_path(group), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "group-card-delete-btn" %>
</div>
