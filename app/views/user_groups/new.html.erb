<%= simple_form_for [@group, @user_group] do |f| %>
  <%= f.input :user_id, as: :check_boxes, collection: User.all, label_method: :username, input_html: {multiple: true} %>
  <%= f.button :submit, class: "submit-btn", value: "Add Users" %>
  <%= f.button :submit, class: "delete-btn", value: "Delete Users" %>
  <%= link_to "Delete Users", group_user_groups_path(@group, @user_group), class: "delete-btn submit-btn", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<% end %>

