<div class="d-flex justify-content-center" style="background-color: rgba(255,255,255,0.4); border-radius: 12px;">
  <div class="common-form">
    <h3>Add Users</h3>
    <%= simple_form_for [@group, @user_group] do |f| %>
      <%= f.input :user_id, as: :check_boxes, collection: User.all, label_method: :username, input_html: {multiple: true} %>
      <%= f.button :submit, class: "submit-btn", value: "Add Users" %>
    <% end %>
  </div>

  <div class="common-form">
    <h3>Remove Users</h3>
    <%= simple_form_for [@group, @user_group] do |f| %>
      <%= f.input :user_id, as: :check_boxes, collection: User.all, label_method: :username, input_html: {multiple: true} %>
      <%= link_to "Delete Users", group_user_groups_path(@group, @user_group), class: "delete-btn", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    <% end %>
  </div>

  <div class="my-2">
    <%# link_to "Leave Group", %>
  </div>
</div>

